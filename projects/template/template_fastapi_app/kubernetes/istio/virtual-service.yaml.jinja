apiVersion: networking.istio.io/v1alpha3
kind: VirtualService
metadata:
  name: {{ (project_dash or project_name) | lower | replace('_', '-') }}
  namespace: {{ (project_dash or project_name) | lower | replace('_', '-') }}
  annotations:
    external-dns.alpha.kubernetes.io/hostname: "api-james.ipv1337.dev"
    external-dns.alpha.kubernetes.io/sync-enabled: "true"
spec:
  hosts:
  - "{{ (project_dash or project_name) | lower | replace('_', '-') }}.{{ (project_dash or project_name) | lower | replace('_', '-') }}.svc.cluster.local"
  - "{{ (project_dash or project_name) | lower | replace('_', '-') }}"
  gateways:
  - {{ (project_dash or project_name) | lower | replace('_', '-') }}-gateway  # Reference to the Gateway
  http:
  # Apply rate limiting headers for the API endpoints
  - match:
    - uri:
        prefix: "/api/v1"
    route:
    - destination:
        host: {{ (project_dash or project_name) | lower | replace('_', '-') }}
        port:
          number: 80
    # Add rate limiting metadata that Envoy will use
    headers:
      request:
        add:
          x-envoy-ratelimited: "true"
    # This applies custom rate limits based on path
    name: "api-routes"
    metadata:
      filter_metadata:
        envoy.filters.http.ratelimit:
          generic_key: "default"
    
  # Higher rate limits for health and static endpoints
  - match:
    - uri:
        prefix: "/health"
    - uri:
        prefix: "/static"
    - uri:
        prefix: "/docs"
    route:
    - destination:
        host: {{ (project_dash or project_name) | lower | replace('_', '-') }}
        port:
          number: 80
    name: "utility-routes"
    # No rate limiting for these paths
    
  # Default case for any other endpoints
  - route:
    - destination:
        host: {{ (project_dash or project_name) | lower | replace('_', '-') }}
        port:
          number: 80
    name: "default-route"
    metadata:
      filter_metadata:
        envoy.filters.http.ratelimit:
          generic_key: "default"
