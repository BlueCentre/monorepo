package main

import (
    "log"
    "github.com/gin-gonic/gin"
)

// Main entry point wires routes; handler functions live in handlers/*.go
func main() {
    r := gin.Default()
    r.GET("/health", healthCheck)
    v1 := r.Group("/api/v1")
    {
        v1.GET("/status", getStatus)
        v1.GET("/hello", getHello)
    }
    log.Println("Starting {{ project_title }} on :8080")
    if err := r.Run(":8080"); err != nil { // nolint:revive
        log.Fatalf("server failed: %v", err)
    }
}